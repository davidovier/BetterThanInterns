// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// USERS & AUTH
// ============================================
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  workspaces WorkspaceMember[]
  accounts   Account[]
  sessions   Session[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// ============================================
// WORKSPACES
// ============================================
model Workspace {
  id        String   @id @default(cuid())
  name      String
  settings  Json     @default("{}")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  members  WorkspaceMember[]
  projects Project[]

  @@map("workspaces")
}

model WorkspaceMember {
  id          String   @id @default(cuid())
  workspaceId String
  userId      String
  role        String   @default("member") // owner, admin, member
  createdAt   DateTime @default(now())

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, userId])
  @@map("workspace_members")
}

// ============================================
// PROJECTS
// ============================================
model Project {
  id          String   @id @default(cuid())
  workspaceId String
  name        String
  description String?
  clientName  String?
  industry    String?
  status      String   @default("draft") // draft, in_progress, blueprint_ready
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  workspace  Workspace   @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  processes  Process[]
  blueprints Blueprint[]

  @@map("projects")
}

// ============================================
// PROCESSES & WORKFLOW
// ============================================
model Process {
  id          String   @id @default(cuid())
  projectId   String
  name        String
  description String?
  owner       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  project       Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  steps         ProcessStep[]
  links         ProcessLink[]
  chatSessions  ChatSession[]
  opportunities Opportunity[]

  @@map("processes")
}

model ProcessStep {
  id          String   @id @default(cuid())
  processId   String
  title       String
  description String?
  owner       String?
  inputs      Json     @default("[]")
  outputs     Json     @default("[]")
  frequency   String?
  duration    String?
  positionX   Float    @default(0)
  positionY   Float    @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  process       Process       @relation(fields: [processId], references: [id], onDelete: Cascade)
  linksFrom     ProcessLink[] @relation("LinkFrom")
  linksTo       ProcessLink[] @relation("LinkTo")
  opportunities Opportunity[]

  @@map("process_steps")
}

model ProcessLink {
  id         String   @id @default(cuid())
  processId  String
  fromStepId String
  toStepId   String
  label      String?
  linkType   String   @default("flow") // flow, data, decision
  createdAt  DateTime @default(now())

  process  Process     @relation(fields: [processId], references: [id], onDelete: Cascade)
  fromStep ProcessStep @relation("LinkFrom", fields: [fromStepId], references: [id], onDelete: Cascade)
  toStep   ProcessStep @relation("LinkTo", fields: [toStepId], references: [id], onDelete: Cascade)

  @@map("process_links")
}

// ============================================
// CHAT & AI ASSISTANT
// ============================================
model ChatSession {
  id        String   @id @default(cuid())
  processId String
  createdAt DateTime @default(now())

  process  Process       @relation(fields: [processId], references: [id], onDelete: Cascade)
  messages ChatMessage[]

  @@map("chat_sessions")
}

model ChatMessage {
  id                String   @id @default(cuid())
  sessionId         String
  role              String // user, assistant, system
  content           String   @db.Text
  workflowDeltaJson Json?
  createdAt         DateTime @default(now())

  session ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@map("chat_messages")
}

// ============================================
// AI OPPORTUNITIES
// ============================================
model Opportunity {
  id               String   @id @default(cuid())
  processId        String
  stepId           String?
  title            String
  description      String   @db.Text
  opportunityType  String // e.g. "document_processing", "data_entry", "communication"
  impactLevel      String // "low" | "medium" | "high"
  effortLevel      String // "low" | "medium" | "high"
  impactScore      Int // 0-100
  feasibilityScore Int // 0-100
  rationaleText    String   @db.Text
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  process          Process           @relation(fields: [processId], references: [id], onDelete: Cascade)
  step             ProcessStep?      @relation(fields: [stepId], references: [id], onDelete: Cascade)
  opportunityTools OpportunityTool[]

  @@map("opportunities")
}

// ============================================
// TOOLS & TOOL MATCHING
// ============================================
model Tool {
  id                    String   @id @default(cuid())
  name                  String
  vendor                String?
  category              String // "ocr", "workflow_automation", "rpa", "llm_agent", "integration", "data_extraction"
  description           String   @db.Text
  useCases              Json     @default("[]") // Array of use case strings
  pricingTier           String // "free", "freemium", "paid", "enterprise"
  integrationComplexity String // "low" | "medium" | "high"
  securityNotes         String?  @db.Text
  websiteUrl            String?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  opportunityTools OpportunityTool[]

  @@map("tools")
}

model OpportunityTool {
  id            String   @id @default(cuid())
  opportunityId String
  toolId        String
  matchScore    Float // 0.0 - 1.0
  rationale     String   @db.Text
  userSelected  Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  opportunity Opportunity @relation(fields: [opportunityId], references: [id], onDelete: Cascade)
  tool        Tool        @relation(fields: [toolId], references: [id], onDelete: Cascade)

  @@unique([opportunityId, toolId])
  @@map("opportunity_tools")
}

// ============================================
// BLUEPRINTS
// ============================================
model Blueprint {
  id               String   @id @default(cuid())
  projectId        String
  title            String
  contentJson      Json // Full structured blueprint content
  renderedMarkdown String   @db.Text
  version          Int      @default(1)
  metadataJson     Json     @default("{}") // Counts, ROI summaries, etc.
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@map("blueprints")
}
